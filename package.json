{
  "name": "local-llm-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server that bridges local LLMs through LM Studio to larger cloud LLMs",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:local": "./scripts/start-local.sh",
    "start:remote": "./scripts/start-remote.sh",
    "start:https": "./scripts/start-https.sh",
    "start:dual": "./scripts/start-dual.sh",
    "generate:certs": "./scripts/generate-certs.sh",
    "stop": "./scripts/stop.sh",
    "restart:remote": "./scripts/restart-remote.sh",
    "dev": "tsx watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "npm run build && tsx test/integration-test.ts",
    "test:basic": "npm run build && tsx test/basic-mcp-test.ts",
    "test:full": "npm run build && tsx test/mcp-client-test.ts",
    "test:regression": "node test-regression.js"
  },
  "keywords": [
    "mcp",
    "llm",
    "lm-studio",
    "local",
    "privacy",
    "ai",
    "model-context-protocol",
    "claude",
    "security",
    "analysis"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/local-llm-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/local-llm-mcp-server/issues"
  },
  "homepage": "https://github.com/yourusername/local-llm-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "openai": "^4.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
